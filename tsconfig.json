{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/lib/*"],
      "handlers/*": ["src/handlers/*"]
    }
  },
  "include": ["api/**/*.ts", "src/**/*.ts"],
  "exclude": [
    "src/handlers/_migrated",
    "src/handlers/_migrated_bak",
    "src/handlers/_migrated*/**"
  ]
}
