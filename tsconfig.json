{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@handlers/*": ["src/handlers/*"]
    }
  },
  "include": ["api/**/*.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/handlers/_migrated",
    "backend",
    ".vercel",
    ".next"
  ]
}
